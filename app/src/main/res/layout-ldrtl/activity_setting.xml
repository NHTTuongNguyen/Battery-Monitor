                                android:layout_height="wrap_content">
                                <TextView
                                    android:textColor="?attr/attrsTextColor"
                                    android:layout_width="wrap_content"
                                    android:text="@string/ShowFloatingWindowOnDesktop"
                                    android:layout_height="wrap_content"/>
                                <Switch

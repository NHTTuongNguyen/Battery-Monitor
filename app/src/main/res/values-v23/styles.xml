<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#eeeeee</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorGreen</item>
        <item name="android:windowLightStatusBar">true</item>
<!--        <item name="android:fontFamily">@font/marvel</item>-->

        <item name="attrsBackgroundColor">@color/colorBackgroundLight</item>
        <item name="attrsCardBackgroundColor">@color/colorBackgroundCardLight</item>
        <item name="attrsTextColor">@color/colorTextLight</item>
        <item name="attrsTintColor">@color/colorTintLight</item>
        <item name="attrsButtonColor">@color/colorButtonLight</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="attrsBackgroundColorDialog">@color/colorBackgroundCardLight</item>

    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="android:windowLightStatusBar">false</item>
        <!--        <item name="android:statusBarColor">#ffffff</item>-->
        <!--        <item name="colorPrimaryDark">#ffffff</item>-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="attrsBackgroundColor">@color/colorBackgroundNight</item>
        <item name="attrsCardBackgroundColor">@color/colorBackgroundCardNight</item>
        <item name="attrsTextColor">@color/colorTextNight</item>
        <item name="attrsTintColor">@color/colorTintNight</item>
        <item name="attrsButtonColor">@color/colorButtonNight</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="attrsBackgroundColorDialog">@color/colorBackgroundCardNight</item>


    </style>
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">?attrsCardBackgroundColor</item>
        <item name="android:textColor">?attrsTextColor</item>
    </style>
    <style name="TextViewSize">
        <item name="android:textSize">13dp</item>
    </style>
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogTheme</item>

    </style>
    <style name="BottomSheeStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>

    </style>
</resources>
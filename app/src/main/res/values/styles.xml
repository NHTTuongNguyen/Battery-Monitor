<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="android:fontFamily">@font/marvel</item>-->
        <item name="attrsBackgroundColor">@color/colorBackgroundLight</item>
        <item name="attrsCardBackgroundColor">@color/colorBackgroundCardLight</item>
        <item name="attrsTextColor">@color/colorTextLight</item>
        <item name="attrsTintColor">@color/colorTintLight</item>
        <item name="attrsButtonColor">@color/colorButtonLight</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="attrsBackgroundColor">@color/colorBackgroundNight</item>
        <item name="attrsCardBackgroundColor">@color/colorBackgroundCardNight</item>
        <item name="attrsTextColor">@color/colorTextNight</item>
        <item name="attrsTintColor">@color/colorTintNight</item>
        <item name="attrsButtonColor">@color/colorButtonNight</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="TextViewSize">
        <item name="android:textSize">13dp</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/colorAccent</item>
    </style>
</resources>
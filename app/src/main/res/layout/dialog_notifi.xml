<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="?attr/attrsCardBackgroundColor"
    android:orientation="vertical"
    android:padding="16dp">

    <View
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_gravity="center"
        android:layout_width="@dimen/dimen_70"
        android:layout_height="@dimen/dimen_3"
        android:layout_marginBottom="@dimen/dimen_10"
        android:background="@color/colorGreen"/>
    <TextView
        android:textColor="?attr/attrsTextColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Notification"
        android:textSize="@dimen/dimen_18"
        android:textStyle="bold"
        />
    <TextView
        android:textColor="?attr/attrsTextColor"
        android:textSize="@dimen/dimen_18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/FromAndroid8"/>
    <Button

        android:layout_margin="@dimen/dimen_16"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/OK"
        android:textColor="@color/colorWhite"
        android:background="@drawable/btn_focus"
        android:id="@+id/button_notifi"

        />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="@dimen/dimen_10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/attrsCardBackgroundColor"
    android:orientation="vertical">
    <LinearLayout
        android:layout_margin="@dimen/dimen_10"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/dimen_20"
            android:textColor="?attr/attrsTextColor"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ScreenTimeOut"/>
        <LinearLayout

            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:textAllCaps="false"
                android:layout_margin="@dimen/dimen_10"
                android:background="@drawable/btn_unfocus"
                android:id="@+id/btn15s"
                android:text="15s"
                android:layout_weight="1"
                android:padding="@dimen/dimen_10"
                android:layout_width="@dimen/dimen_50"
                android:layout_height="@dimen/dimen_40"/>
            <Button
                android:textAllCaps="false"
                android:layout_margin="@dimen/dimen_10"
                android:background="@drawable/btn_unfocus"
                android:id="@+id/btn30s"
                android:text="30s"
                android:padding="@dimen/dimen_10"
                android:layout_weight="1"
                android:layout_width="@dimen/dimen_50"
                android:layout_height="@dimen/dimen_40"/>
            <Button
                android:layout_margin="@dimen/dimen_10"
                android:background="@drawable/btn_unfocus"
                android:id="@+id/btn1m"
                android:textAllCaps="false"
                android:text="1min"
                android:padding="@dimen/dimen_10"
                android:layout_weight="1"
                android:layout_width="@dimen/dimen_50"
                android:layout_height="@dimen/dimen_40"/>
            <Button
                android:layout_margin="@dimen/dimen_10"
                android:background="@drawable/btn_unfocus"
                android:id="@+id/btn5m"
                android:textAllCaps="false"
                android:text="5m"
                android:padding="@dimen/dimen_10"
                android:layout_weight="1"
                android:layout_width="@dimen/dimen_50"
                android:layout_height="@dimen/dimen_40"/>
        </LinearLayout>
        <LinearLayout
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="@dimen/dimen_50"
                android:layout_height="@dimen/dimen_40"
                android:textAllCaps="false"
                android:text="10m"
                android:layout_margin="@dimen/dimen_10"
                android:id="@+id/btn10m"
                android:padding="@dimen/dimen_10"
                android:layout_weight="1"
                android:background="@drawable/btn_unfocus"
              />

            <Button
                android:layout_margin="@dimen/dimen_10"
                android:background="@drawable/btn_unfocus"
                android:id="@+id/btn15m"
                android:textAllCaps="false"
                android:text="15m"
                android:padding="@dimen/dimen_10"
                android:layout_weight="1"
                android:layout_width="@dimen/dimen_50"
                android:layout_height="@dimen/dimen_40"/>
            <Button
                android:layout_margin="@dimen/dimen_10"
                android:background="@drawable/btn_unfocus"
                android:id="@+id/btn20m"
                android:textAllCaps="false"
                android:text="20m"
                android:padding="@dimen/dimen_10"
                android:layout_weight="1"
                android:layout_width="@dimen/dimen_50"
                android:layout_height="@dimen/dimen_40"/>
            <Button
                android:layout_margin="@dimen/dimen_10"
                android:background="@drawable/btn_unfocus"
                android:id="@+id/btn30m"
                android:textAllCaps="false"
                android:text="30m"
                android:padding="@dimen/dimen_10"
                android:layout_weight="1"
                android:layout_width="@dimen/dimen_50"
                android:layout_height="@dimen/dimen_40"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.InformationFragment"
    android:theme="@style/Theme.CustomStyle">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_10"
                app:cardBackgroundColor="@color/colorBlueGray"
                android:layout_margin="@dimen/dimen_10"
                app:cardCornerRadius="@dimen/dimen_10"
                android:layout_alignParentTop="true"
                android:id="@+id/adsCard"
                >
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorBlueGray"
                android:layout_margin="@dimen/dimen_10"
                app:cardCornerRadius="@dimen/dimen_10"
                android:layout_below="@id/tempGraphCard">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:padding="@dimen/dimen_10">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imghinhpin"
                            android:src="@drawable/b50"
                            android:layout_width="70dp"
                            android:layout_height="70dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txtphantrampin"
                                android:layout_marginTop="10dp"
                                android:text="50%"
                                android:textColor="@color/colorGreen"
                                android:textStyle="bold"
                                android:textSize="@dimen/dimen_40"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:weightSum="5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                        <LinearLayout
                            android:layout_weight="4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txtNhietDoLon"
                                android:text="33.3Â°C"
                                android:textColor="@color/colorGreen"
                                android:textStyle="bold"
                                android:textSize="@dimen/dimen_40"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Charging"
                                android:textSize="@dimen/dimen_20"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1h 29m"
                                android:textSize="@dimen/dimen_15"/>
                        </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_gravity="right"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Menu"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorBlueGray"
                    android:layout_margin="@dimen/dimen_10"
                    app:cardCornerRadius="@dimen/dimen_10"
                    android:id="@+id/monitorCard">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:padding="@dimen/dimen_10">
                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:orientation="vertical"
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <ImageView
                                            android:id="@+id/img_Status"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_baseline_status_24" />
                                        <TextView
                                            android:layout_toRightOf="@+id/img_Status"
                                            android:layout_marginLeft="10dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/Status"
                                            android:textColor="#1C223C"
                                            android:textSize="15dp" />

                                        <TextView
                                            android:id="@+id/txttrangthai"
                                            android:layout_alignParentRight="true"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Charging"
                                            android:textColor="#1C223C"
                                            android:textSize="15dp" />
                                    </RelativeLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="vertical"
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <ImageView
                                            android:id="@+id/img_Health"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_home_black_24dp" />
                                        <TextView
                                            android:layout_toRightOf="@+id/img_Health"
                                            android:layout_marginLeft="10dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/Health"
                                            android:textColor="#1C223C"
                                            android:textSize="15dp" />

                                        <TextView
                                            android:id="@+id/txtHealth"
                                            android:layout_alignParentRight="true"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Good"
                                            android:textColor="#1C223C"
                                            android:textSize="15dp" />
                                    </RelativeLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="vertical"
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <ImageView
                                            android:id="@+id/img_Power"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_baseline_power_24" />
                                        <TextView
                                            android:layout_toRightOf="@+id/img_Power"
                                            android:layout_marginLeft="10dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/Power"
                                            android:textColor="#1C223C"
                                            android:textSize="15dp" />

                                        <TextView
                                            android:id="@+id/txtPower"
                                            android:layout_alignParentRight="true"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="USB Port"
                                            android:textColor="#1C223C"
                                            android:textSize="15dp" />
                                    </RelativeLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="vertical"
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <ImageView
                                            android:id="@+id/img_BatteryType"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_home_black_24dp" />
                                        <TextView

                                            android:layout_toRightOf="@+id/img_BatteryType"
                                            android:layout_marginLeft="10dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/BatteryType"
                                            android:textColor="#1C223C"
                                            android:textSize="15dp" />

                                        <TextView
                                            android:id="@+id/txtBatteryType"
                                            android:layout_alignParentRight="true"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Type"
                                            android:textColor="#1C223C"
                                            />
                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>
                            <View
                                android:layout_margin="10dp"
                                android:background="@android:color/black"
                                android:layout_width="1dp"
                                android:layout_height="@dimen/dimen_70"/>
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:orientation="vertical"
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <ImageView
                                            android:id="@+id/img_Voltage"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_home_black_24dp" />
                                        <TextView
                                            android:layout_toRightOf="@+id/img_Voltage"
                                            android:layout_marginLeft="10dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/Voltage"
                                            android:textColor="#1C223C"
                                            android:textSize="15dp" />

                                        <TextView
                                            android:id="@+id/txtVoltage"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:text="4000 mv"
                                            android:textColor="#1C223C"
                                            android:textSize="15dp"
                                            />
                                    </RelativeLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <ImageView
                                            android:id="@+id/img_Temperature"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_home_black_24dp" />
                                        <TextView
                                            android:layout_toRightOf="@+id/img_Temperature"
                                            android:layout_marginLeft="10dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/Temperature"
                                            android:textColor="#1C223C"
                                            android:textSize="15dp" />

                                        <TextView
                                            android:id="@+id/txtTemperature"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:layout_marginRight="0dp"
                                            android:text="33 C"
                                            android:textColor="#1C223C"
                                            android:textSize="15dp"
                                            />
                                    </RelativeLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="vertical"
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <ImageView
                                            android:id="@+id/img_Level"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_baseline_battery_full_24" />
                                        <TextView

                                            android:layout_toRightOf="@+id/img_Level"
                                            android:layout_marginLeft="10dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/Level"
                                            android:textColor="#1C223C"
                                            android:textSize="15dp" />

                                        <TextView
                                            android:id="@+id/txtLevel"
                                            android:layout_alignParentRight="true"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="71%"
                                            android:textColor="#1C223C"
                                          />
                                    </RelativeLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="vertical"
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <ImageView
                                            android:id="@+id/img_ChargingSource"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_home_black_24dp" />
                                        <TextView

                                            android:layout_toRightOf="@+id/img_ChargingSource"
                                            android:layout_marginLeft="10dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/ChargingSource"
                                            android:textColor="#1C223C"
                                            android:textSize="15dp" />

                                        <TextView
                                            android:id="@+id/txtChargingSource"
                                            android:layout_alignParentRight="true"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Source"
                                            android:textColor="#1C223C"
                                            />
                                    </RelativeLayout>

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="@dimen/dimen_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:weightSum="6">

                            <LinearLayout
                                android:id="@+id/linearLayout_View"
                                android:background="?android:attr/selectableItemBackground"
                                android:layout_width="62dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="44dp"
                                    android:layout_height="44dp"
                                    android:background="@drawable/cercleshape"
                                    android:padding="10dp"
                                    android:src="@drawable/ic_baseline_visibility_24" />
                            </LinearLayout>
                            <LinearLayout
                                android:background="?android:attr/selectableItemBackground"
                                android:layout_width="62dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="44dp"
                                    android:layout_height="44dp"
                                    android:background="@drawable/cercleshape"
                                    android:padding="10dp"
                                    android:src="@drawable/ic_baseline_signal_wifi_4_bar_24" />




                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearLayout_SettingWifi"
                                android:background="?android:attr/selectableItemBackground"

                                android:layout_width="62dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="44dp"
                                    android:layout_height="44dp"
                                    android:background="@drawable/cercleshape"
                                    android:padding="10dp"
                                    android:src="@drawable/ic_baseline_perm_scan_wifi_24"/>




                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearLayout_Bluetooth"
                                android:background="?android:attr/selectableItemBackground"

                                android:layout_width="62dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/img_Bluetooth"
                                    android:layout_width="44dp"
                                    android:layout_height="44dp"
                                    android:background="@drawable/cercleshape"
                                    android:padding="10dp"
                                    android:src="@drawable/ic_baseline_bluetooth_disabled_24" />



                            </LinearLayout>
                            <LinearLayout
                                android:background="?android:attr/selectableItemBackground"
                                android:id="@+id/linearLayout_Brightness"
                                android:layout_width="62dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/img_Brightness"
                                    android:layout_width="44dp"
                                    android:layout_height="44dp"
                                    android:background="@drawable/cercleshape"
                                    android:padding="10dp"
                                    android:src="@drawable/ic_baseline_brightness_7_24"/>




                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearLayout_Landscape"
                                android:background="?android:attr/selectableItemBackground"
                                android:layout_width="62dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/img_Landscape"
                                    android:layout_width="44dp"
                                    android:layout_height="44dp"
                                    android:background="@drawable/cercleshape"
                                    android:padding="10dp"
                                    android:src="@drawable/ic_baseline_screen_lock_landscape_24" />



                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>



                </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorBlueGray"
                android:layout_margin="@dimen/dimen_10"
                app:cardCornerRadius="@dimen/dimen_10"
                android:id="@+id/levelGraphCard"
                android:layout_below="@id/monitorCard"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_10">

                    <lecho.lib.hellocharts.view.LineChartView
                        android:padding="20dp"
                        android:id="@+id/chart"
                        android:layout_width="match_parent"
                        android:layout_height="500dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorBlueGray"
                android:layout_margin="@dimen/dimen_10"
                app:cardCornerRadius="@dimen/dimen_10"
                android:id="@+id/tempGraphCard"
                android:layout_below="@id/levelGraphCard"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_10">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/heading_3"
                        android:text="Battery Temperature Graph"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_normal"
                        android:text="Statistics for over the past 24 hours"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_normal"
                        android:text="....................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................."/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>